import numpy as np

# Create an array of all even integers from 30 to 70
even_integers = np.arange(30, 1, 8)

# Display the array
print(even_integers)



INTERNSHIP TASK 2

import numpy as np

# Generate an array of 15 random numbers from a standard normal distribution
random_numbers = np.random.randn(15)

# Display the array
print(random_numbers)



INTERNSHIP TASK 3


import numpy as np

# Define two vectors
vector_a = np.array([4, 5, 6])
vector_b = np.array([1, 2, 3])

# Compute the cross-product
cross_product = np.cross(vector_a, vector_b)

# Display the result
print(cross_product)



INTERNSHIP TASK 4



import numpy as np

# Define a square matrix
matrix = np.array([[7, 22], [5, 7]])

# Compute the determinant of the matrix
determinant = np.linalg.det(matrix)

# Display the determinant
print(determinant)




INTERNSHIO TASK 5




import numpy as np

# Create a 5x5 array with random values
random_array_5x5 = np.random.random((5, 5))

# Find the minimum and maximum values
min_value = random_array_5x5.min()
max_value = random_array_5x5.max()

# Display the array, minimum value, and maximum value
print("5x5 Array with Random Values:\n", random_array_5x5)
print("Minimum Value:", min_value)
print("Maximum Value:", max_value)



